#include<stdio.h>
void main()
{
    int n,r,c,sp;
    printf("Enter n:");
    scanf("%d",&n);
    for(r=1;r<=n;r++)
    {
        for(sp=1;sp<=n-r;sp++)
        {
            printf(" ");
        }
        for(c=1;c<=2*r-1;c++)
        {
            printf("*");
        }
        printf("\n");
    }
}
